<h1>Create Recipe</h1>

<% if flash[:my_errors] %>
    <% flash[:my_errors].each do |error| %>
        <p style="color: red;"><%= error %></p>
    <% end %>
<% end %>

<%= form_for @recipe do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.label :user_id %>
  <%= f.collection_select :user_id, User.all, :id, :name %>

  <%= f.submit %>
<% end %>